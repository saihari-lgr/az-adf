							"directory_path": {
								"value": "@pipeline().parameters.param_inbound_directory_path",
								"type": "Expression"
							},
							"file_name": {
								"value": "@pipeline().parameters.param_file_name",
								"type": "Expression"
							}
						}
					}
				],
				"outputs": [
					{
						"referenceName": "ds_adls2_poc_csv_param",
