				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "DelimitedTextSource",
						"additionalColumns": [
							{
								"name": "SourceFile",
								"value": "$$FILEPATH"
							},
							{
								"name": "dup_Borough",
								"value": "$$COLUMN:Borough"
							},
							{
								"name": "pipeline_Name",
