			"param_inbound_root_path": {
				"type": "string",
				"defaultValue": "explore-adls"
			},
			"param_inbound_directory_path": {
				"type": "string",
				"defaultValue": "poc/inbound/nycRaw"
			},
			"param_output_root_path": {
				"type": "string",
				"defaultValue": "explore-adls"
			},
			"param_output_directory_path": {
				"type": "string",
				"defaultValue": "poc/output/nycRaw"
