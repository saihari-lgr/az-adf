{
	"name": "02_get_metadata",
	"properties": {
		"description": "get  metadat info",
		"activities": [
			{
				"name": "get calendar file info",
				"type": "GetMetadata",
				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"dataset": {
						"referenceName": "ds_adls2_poc_csv",
						"type": "DatasetReference"
					},
					"fieldList": [
						"childItems"
					],
					"storeSettings": {
						"type": "AzureBlobFSReadSettings",
						"recursive": true,
						"enablePartitionDiscovery": false
					},
					"formatSettings": {
						"type": "DelimitedTextReadSettings"
					}
				}
			},
			{
				"name": "get only files",
				"type": "Filter",
				"dependsOn": [
					{
						"activity": "get calendar file info",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"userProperties": [],
				"typeProperties": {
					"condition": {
						"value": "@activity('get calendar file info').output.itemType == \"File\"",
						"type": "Expression"
					}
				}
			}
		],
		"folder": {
			"name": "activities"
		},
		"annotations": []
	}
}