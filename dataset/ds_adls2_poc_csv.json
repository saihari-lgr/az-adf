			"type": "LinkedServiceReference"
		},
		"parameters": {
			"root_path": {
				"type": "string"
			},
			"directory_path": {
				"type": "string"
			},
			"file_name": {
				"type": "string"
			}
		},
		"folder": {
			"name": "poc"
		},
		"annotations": [],
